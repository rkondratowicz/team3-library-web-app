<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-header text-center">
                <h3><i class="fas fa-key"></i> Set Password</h3>
            </div>
            <div class="card-body">
                <p class="text-muted text-center mb-4">
                    Set up your password to access your library account.
                </p>
                
                <form id="set-password-form">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" required>
                        <div class="form-text">Enter the username provided by library staff</div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">New Password</label>
                        <input type="password" class="form-control" id="password" name="password" required minlength="6">
                        <div class="form-text">Password must be at least 6 characters long</div>
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6">
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-lock"></i> Set Password
                        </button>
                    </div>
                </form>
                
                <div class="text-center mt-3">
                    <small>
                        <a href="/login" class="text-muted">Already have a password? Login</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Set Password Result Modal -->
<div class="modal fade" id="setPasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="setPasswordModalTitle">Password Setup</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="setPasswordModalBody">
                <!-- Dynamic content -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('set-password-form').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const form = e.target;
    const formData = new FormData(form);
    const password = formData.get('password');
    const confirmPassword = formData.get('confirmPassword');
    
    // Validate passwords match
    if (password !== confirmPassword) {
        showModal('Error', `
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i> Passwords do not match. Please try again.
            </div>
        `);
        return;
    }
    
    const setPasswordData = {
        username: formData.get('username'),
        password: password
    };
    
    const submitButton = form.querySelector('button[type="submit"]');
    const originalText = submitButton.innerHTML;
    
    try {
        // Show loading state
        submitButton.disabled = true;
        submitButton.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Setting password...';
        
        const response = await fetch('/api/auth/set-password', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(setPasswordData)
        });
        
        const result = await response.json();
        
        if (response.ok && result.message) {
            showModal('Success', `
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> Password set successfully!
                </div>
                <p>You can now log in with your username and password.</p>
            `);
            
            // Clear form
            form.reset();
            
            // Redirect to login after delay
            setTimeout(() => {
                window.location.href = '/login';
            }, 3000);
        } else {
            showModal('Error', `
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i> ${result.error || 'Failed to set password'}
                </div>
            `);
        }
        
    } catch (error) {
        console.error('Set password error:', error);
        showModal('Error', `
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i> Network error. Please try again.
            </div>
        `);
    } finally {
        // Reset button
        submitButton.disabled = false;
        submitButton.innerHTML = originalText;
    }
});

function showModal(title, body) {
    const modal = new bootstrap.Modal(document.getElementById('setPasswordModal'));
    const modalTitle = document.getElementById('setPasswordModalTitle');
    const modalBody = document.getElementById('setPasswordModalBody');
    
    modalTitle.textContent = title;
    modalBody.innerHTML = body;
    modal.show();
}
</script>