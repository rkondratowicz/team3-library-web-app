{{#> layouts/main title=title}}

<div class="container-fluid py-4">
  <!-- Header -->
  <div class="row mb-4">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/members">Members</a></li>
          <li class="breadcrumb-item active" aria-current="page">{{member.memberName}}</li>
        </ol>
      </nav>
      
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="h2 mb-0">{{member.memberName}}</h1>
        <div>
          <a href="/members/{{member.id}}/edit" class="btn btn-outline-primary">
            <i class="bi bi-pencil"></i> Edit Member
          </a>
          <a href="/members" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Members
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Member Information -->
  <div class="row">
    <!-- Personal Information -->
    <div class="col-lg-8">
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-person"></i> Personal Information
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label text-muted">Full Name</label>
              <div class="fw-bold">{{member.memberName}}</div>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label text-muted">Email Address</label>
              <div>
                <a href="mailto:{{member.email}}" class="text-decoration-none">
                  <i class="bi bi-envelope"></i> {{member.email}}
                </a>
              </div>
            </div>
            {{#if member.phone}}
            <div class="col-md-6 mb-3">
              <label class="form-label text-muted">Phone Number</label>
              <div>
                <a href="tel:{{member.phone}}" class="text-decoration-none">
                  <i class="bi bi-telephone"></i> {{member.phone}}
                </a>
              </div>
            </div>
            {{/if}}
            {{#if member.memAddress}}
            <div class="col-md-6 mb-3">
              <label class="form-label text-muted">Address</label>
              <div>
                <i class="bi bi-geo-alt"></i> {{member.memAddress}}
              </div>
            </div>
            {{/if}}
          </div>
        </div>
      </div>

      <!-- Current Borrowings Section -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-book"></i> Currently Borrowed Books
          </h5>
        </div>
        <div class="card-body">
          {{#if member.current_borrowings.length}}
            <div class="row g-3">
              {{#each member.current_borrowings}}
              <div class="col-12">
                <div class="card border-{{#if is_overdue}}danger{{else}}light{{/if}}">
                  <div class="card-body">
                    <div class="row align-items-center">
                      <div class="col-md-8">
                        <h6 class="card-title mb-1">{{book_title}}</h6>
                        <p class="text-muted mb-2">
                          <i class="bi bi-person"></i> {{book_author}}
                          {{#if book_isbn}}
                            <span class="ms-3"><i class="bi bi-upc"></i> {{book_isbn}}</span>
                          {{/if}}
                          <span class="ms-3"><i class="bi bi-hash"></i> Copy #{{copy_number}}</span>
                        </p>
                        <div class="d-flex flex-wrap gap-2">
                          <small class="text-muted">
                            <i class="bi bi-calendar-check"></i> 
                            Borrowed: {{formatDate borrowed_date}}
                          </small>
                          <small class="text-muted">
                            <i class="bi bi-calendar-x"></i> 
                            Due: {{formatDate due_date}}
                          </small>
                          {{#if renewal_count}}
                          <small class="text-info">
                            <i class="bi bi-arrow-repeat"></i> 
                            Renewed {{renewal_count}} time{{#if (gt renewal_count 1)}}s{{/if}}
                          </small>
                          {{/if}}
                        </div>
                      </div>
                      <div class="col-md-4 text-md-end">
                        {{#if is_overdue}}
                          <span class="badge bg-danger fs-6 mb-2">
                            <i class="bi bi-exclamation-triangle"></i> 
                            {{overdue_days}} day{{#if (gt overdue_days 1)}}s{{/if}} overdue
                          </span>
                        {{else}}
                          <span class="badge bg-success fs-6 mb-2">
                            <i class="bi bi-check-circle"></i> On time
                          </span>
                        {{/if}}

                      </div>
                    </div>
                    {{#if notes}}
                    <div class="mt-2">
                      <small class="text-muted">
                        <i class="bi bi-sticky"></i> {{notes}}
                      </small>
                    </div>
                    {{/if}}
                  </div>
                </div>
              </div>
              {{/each}}
            </div>
          {{else}}
            <div class="text-center py-4 text-muted">
              <i class="bi bi-book display-4"></i>
              <p class="mt-3 mb-0">No books currently borrowed</p>
              <small>This member has returned all borrowed books</small>
            </div>
          {{/if}}
        </div>
      </div>
    </div>

    <!-- Status & Statistics -->
    <div class="col-lg-4">
      <!-- Member Status -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-info-circle"></i> Member Status
          </h5>
        </div>
        <div class="card-body">
          <div class="text-center">
            <span class="badge bg-{{#if (eq member.status 'active')}}success{{else if (eq member.status 'suspended')}}warning{{else}}secondary{{/if}} fs-6 px-3 py-2">
              {{#if (eq member.status 'active')}}
                <i class="bi bi-check-circle"></i> Active Member
              {{else if (eq member.status 'suspended')}}
                <i class="bi bi-exclamation-triangle"></i> Suspended
              {{else}}
                <i class="bi bi-x-circle"></i> Inactive
              {{/if}}
            </span>
          </div>
          
          <hr>
          
          <div class="row text-center">
            <div class="col-4">
              <div class="border-end">
                <div class="h4 mb-0 text-primary">{{member.max_books}}</div>
                <small class="text-muted">Max Books</small>
              </div>
            </div>
            <div class="col-4">
              <div class="border-end">
                <div class="h4 mb-0 text-info">{{member.borrowing_count}}</div>
                <small class="text-muted">Currently Borrowed</small>
              </div>
            </div>
            <div class="col-4">
              <div class="h4 mb-0 {{#if member.overdue_count}}text-danger{{else}}text-success{{/if}}">{{member.overdue_count}}</div>
              <small class="text-muted">Overdue</small>
            </div>
          </div>
          
          {{#if member.overdue_count}}
          <div class="alert alert-warning mt-3 mb-0" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Attention:</strong> This member has {{member.overdue_count}} overdue book{{#if (gt member.overdue_count 1)}}s{{/if}}.
          </div>
          {{else if member.can_borrow_more}}
          <div class="alert alert-success mt-3 mb-0" role="alert">
            <i class="bi bi-check-circle"></i>
            <strong>Good Standing:</strong> Member can borrow {{subtract member.max_books member.borrowing_count}} more book{{#if (gt (subtract member.max_books member.borrowing_count) 1)}}s{{/if}}.
          </div>
          {{else if (eq member.borrowing_count member.max_books)}}
          <div class="alert alert-info mt-3 mb-0" role="alert">
            <i class="bi bi-info-circle"></i>
            <strong>At Limit:</strong> Member has reached their borrowing limit.
          </div>
          {{/if}}
        </div>
      </div>

      <!-- Member Since -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-calendar"></i> Membership Info
          </h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <label class="form-label text-muted">Member Since</label>
            <div class="fw-bold">{{formatDate member.member_since}}</div>
          </div>
          <div class="mb-3">
            <label class="form-label text-muted">Last Updated</label>
            <div class="fw-bold">{{formatDate member.updated_at}}</div>
          </div>
          <div>
            <label class="form-label text-muted">Member ID</label>
            <div class="small font-monospace text-muted">{{member.id}}</div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-lightning"></i> Quick Actions
          </h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <a href="/members/{{member.id}}/edit" class="btn btn-outline-primary">
              <i class="bi bi-pencil"></i> Edit Information
            </a>
            <button type="button" class="btn btn-outline-warning" disabled>
              <i class="bi bi-clock-history"></i> Borrowing History
            </button>
            <hr>
            <button type="button" class="btn btn-outline-danger" onclick="confirmDelete()" {{#if member.borrowing_count}}disabled title="Cannot delete member with active borrowings"{{/if}}>
              <i class="bi bi-trash"></i> Delete Member
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add Bootstrap Icons if not already included -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the member <strong>{{member.memberName}}</strong>?</p>
        <p class="text-danger"><i class="bi bi-exclamation-triangle"></i> This action cannot be undone.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form method="POST" action="/api/form/members/{{member.id}}" style="display: inline;">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete Member
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
function confirmDelete() {
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    modal.show();
}
</script>

{{/layouts/main}}